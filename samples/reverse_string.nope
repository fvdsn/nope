let hello = 'Hello World :)'

let l = len hello
var reversed = ''
var shuffled = ''

var i = 0, while i < l (
    let char = char_at i <- hello
    set reversed = char + reversed
    set shuffled = if flip_coin (
        char + shuffled
    ) else (
        shuffled + char
    )
    set i = i + 1
)

print ~
print hello
print (l *: '=')
print reversed
print (ceil(l / 2) *: '- ')
print shuffled
print ~

